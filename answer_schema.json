{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AnswerPayload",
  "type": "object",
  "properties": {
    "answer": {
      "type": "string"
    },
    "category": {
      "type": "string",
      "enum": [
        "api",
        "security",
        "pricing",
        "support",
        "other"
      ]
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "doc": {
            "type": "string"
          },
          "snippet": {
            "type": "string"
          }
        },
        "required": [
          "doc"
        ]
      }
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    }
  },
  "required": [
    "answer",
    "category",
    "confidence"
  ],
  "additionalProperties": false
}